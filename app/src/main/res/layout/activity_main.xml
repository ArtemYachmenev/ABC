<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="237dp"
        android:layout_height="208dp"
        android:layout_above="@id/login"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/abc" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <EditText
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <Button
        android:id="@+id/authorization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerInParent="true"
        android:onClick="onClickAuthorization"
        android:text="@string/entrance" />

    <CheckBox
        android:id="@+id/checkBoxAut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerCheckBox"
        android:layout_below="@id/authorization"
        android:onClick="onclickCheckBox"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/recovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBoxAut"
        android:layout_centerHorizontal="true"
        android:onClick="onclickRecovery"
        android:text="@string/recovery" />

</RelativeLayout>